@{
    ViewBag.Title = "Home Page";
}

<div class="row" style="margin-top:50px">
    <div class="col-md-4">
        @Html.ActionLink("Create Route >>", "Index", "CreateRoute", new { area = "" }, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-4">
        @Html.ActionLink("Search Route >>", "Index", "SearchRoute", new { area = "" }, new { @class = "btn btn-default" })
    </div>
</div>

<div class="row" style="margin-top:50px">
    <div id="map" style="height: 450px; width:1200px"></div>
</div>
<script>
    var map = L.map('map').setView([44.5, 26], 10);
    var layer = L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png');
    layer.addTo(map);

    var marker = L.marker([44.56, 26], { draggable: true });
    marker.addTo(map);

   



</script>